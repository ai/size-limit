{
  "private": true,
  "scripts": {
    "bump": "./scripts/bump",
    "test": "jest --coverage --forceExit && eslint . && yaspeller *.md packages/*/*.md && sh scripts/max-listeners-check.sh"
  },
  "workspaces": [
    "packages/preset-small-lib",
    "packages/preset-big-lib",
    "packages/preset-app",
    "packages/dual-publish",
    "packages/size-limit",
    "packages/webpack",
    "packages/time",
    "packages/file"
  ],
  "devDependencies": {
    "@logux/eslint-config": "^45.4.8",
    "@logux/sharec-config": "^0.11.0",
    "check-dts": "^0.5.6",
    "clean-publish": "^3.0.3",
    "cross-spawn": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "^24.4.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^1.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-unicorn": "^36.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^11.1.2",
    "prettier": "^2.4.1",
    "print-snapshots": "^0.4.0",
    "simple-git-hooks": "^2.6.1",
    "yaspeller": "^7.0.0"
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config",
    "rules": {
      "node/no-unsupported-features/es-syntax": "off",
      "security/detect-non-literal-require": "off",
      "security/detect-non-literal-regexp": "off",
      "node/global-require": "off",
      "no-console": "off"
    },
    "overrides": [
      {
        "files": "*.test.js",
        "rules": {
          "node/no-extraneous-require": "off"
        }
      },
      {
        "files": "packages/*/test/**/*.js",
        "rules": {
          "node/no-unpublished-require": "off"
        }
      },
      {
        "files": "packages/size-limit/run.js",
        "rules": {
          "consistent-return": "off"
        }
      }
    ]
  },
  "eslintIgnore": [
    "node_modules",
    "packages/size-limit/test/fixtures",
    "**/errors.ts"
  ],
  "jest": {
    "testEnvironment": "node",
    "modulePathIgnorePatterns": [
      "<rootDir>/packages/size-limit/test/fixtures"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "lint-staged": {
    "*.md": "yaspeller",
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "ignoreText": [
      " \\(by [^)]+\\)."
    ],
    "dictionary": [
      "linter",
      "JS",
      "polyfills",
      "MobX",
      "UI",
      "Autoprefixer",
      "PostCSS",
      "Browserslist",
      "EmojiMart",
      "Logux",
      "webpackâ€™s",
      "bundler",
      "Vue",
      "Rollup",
      "CI",
      "gzip",
      "js",
      "kB",
      "nanoid",
      "npm",
      "Storeon",
      "Travis",
      "webpack",
      "Versioning",
      "JSDoc",
      "Puppeter",
      "estimo",
      "bundlers",
      "CLI",
      "CRM",
      "brotli",
      "PnP",
      "ES",
      "GitHub",
      "modifyWebpackConfig",
      "compareWith",
      "uiReports",
      "Statoscope"
    ]
  },
  "sharec": {
    "config": "@logux/sharec-config",
    "version": "0.11.0"
  }
}
