{
  "private": true,
  "scripts": {
    "bump": "./scripts/bump",
    "release": "./scripts/each npm publish --access public",
    "postinstall": "./scripts/each yarn",
    "clean": "rimraf api.md coverage/ packages/.cache",
    "api": "documentation build packages/*/*.js -f md -o api.md",
    "spell": "yarn api && yaspeller-ci packages/*/*.md",
    "test": "jest-ci --coverage && eslint-ci . && yarn spell"
  },
  "workspaces": [
    "packages/preset-small-lib",
    "packages/preset-big-lib",
    "packages/preset-app",
    "packages/size-limit",
    "packages/webpack",
    "packages/time",
    "packages/file"
  ],
  "devDependencies": {
    "@logux/eslint-config": "^36.0.0",
    "@logux/sharec-config": "^0.5.7",
    "cross-spawn": "^7.0.1",
    "documentation": "^12.1.4",
    "eslint": "^6.8.0",
    "eslint-ci": "^1.0.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-es5": "^1.5.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.8.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prefer-let": "^1.0.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-unicorn": "^16.1.1",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "jest-ci": "^0.1.1",
    "lint-staged": "^10.0.8",
    "print-snapshots": "^0.3.0",
    "rimraf": "^3.0.2",
    "yaspeller-ci": "^1.0.2"
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config",
    "rules": {
      "security/detect-non-literal-require": "off",
      "security/detect-non-literal-regexp": "off",
      "global-require": "off"
    },
    "overrides": [
      {
        "files": "*.test.js",
        "rules": {
          "node/no-extraneous-require": "off"
        }
      },
      {
        "files": "packages/*/test/**/*.js",
        "rules": {
          "node/no-unpublished-require": "off"
        }
      },
      {
        "files": "packages/size-limit/run.js",
        "rules": {
          "consistent-return": "off"
        }
      }
    ]
  },
  "eslintIgnore": [
    "node_modules",
    "packages/size-limit/test/fixtures"
  ],
  "jest": {
    "testEnvironment": "node",
    "modulePathIgnorePatterns": [
      "<rootDir>/packages/size-limit/test/fixtures"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "ignoreText": [
      " \\(by [^)]+\\)."
    ],
    "dictionary": [
      "linter",
      "JS",
      "polyfills",
      "MobX",
      "UI",
      "Autoprefixer",
      "PostCSS",
      "Browserslist",
      "EmojiMart",
      "Logux",
      "webpackâ€™s",
      "bundler",
      "Vue",
      "Rollup",
      "CI",
      "gzip",
      "js",
      "KB",
      "nanoid",
      "npm",
      "Storeon",
      "Travis",
      "webpack",
      "Versioning",
      "JSDoc",
      "Puppeter",
      "estimo",
      "bundlers",
      "CLI",
      "CRM",
      "brotli",
      "PnP"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.md": "yaspeller",
    "*.js": "eslint"
  },
  "sharec": {
    "config": "@logux/sharec-config",
    "version": "0.5.7"
  }
}
