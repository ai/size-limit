{
  "name": "size-limit",
  "version": "0.15.2",
  "description": "Prevent JS libraries bloat. If you accidentally add a massive dependency, Size Limit will throw an error.",
  "keywords": [
    "size",
    "limit",
    "travis",
    "ci",
    "bundle",
    "webpack"
  ],
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "ai/size-limit",
  "bin": "cli.js",
  "dependencies": {
    "bytes": "^3.0.0",
    "chalk": "^2.3.2",
    "ci-job-number": "^0.3.0",
    "compression-webpack-plugin": "^1.1.10",
    "cosmiconfig": "^4.0.0",
    "css-loader": "^0.28.10",
    "escape-string-regexp": "^1.0.5",
    "file-loader": "^1.1.11",
    "globby": "^8.0.1",
    "gzip-size": "^4.1.0",
    "memory-fs": "^0.4.1",
    "read-pkg-up": "^3.0.0",
    "style-loader": "^0.20.2",
    "webpack": "^4.0.1",
    "webpack-bundle-analyzer": "^2.11.1",
    "yargs": "^11.0.0"
  },
  "devDependencies": {
    "cross-spawn": "^6.0.4",
    "eslint": "^4.18.1",
    "eslint-ci": "^0.1.1",
    "eslint-config-logux": "^21.0.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jest": "^21.12.2",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^3.0.1",
    "jest": "^22.4.2",
    "lint-staged": "^7.0.0",
    "pre-commit": "^1.2.2",
    "redux": "^3.7.2",
    "yaspeller-ci": "^1.0.0"
  },
  "scripts": {
    "lint-staged": "lint-staged",
    "spellcheck": "yaspeller-ci *.md",
    "lint": "eslint-ci *.js test/{fixtures/**/,}*.js",
    "test": "jest && yarn run lint && yarn run spellcheck"
  },
  "engines": {
    "node": ">=6.11.5"
  },
  "eslintConfig": {
    "extends": "eslint-config-logux/node4",
    "rules": {
      "security/detect-non-literal-require": "off",
      "security/detect-non-literal-regexp": "off",
      "global-require": "off",
      "strict": "off"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "modulePathIgnorePatterns": [
      "<rootDir>/test/fixtures"
    ]
  },
  "lint-staged": {
    "*.md": "yaspeller-ci",
    "*.js": "eslint"
  },
  "pre-commit": [
    "lint-staged"
  ]
}
